public class Livros {		
	private static String nome;	
	private static String autor;
	private static String genero;
	private static int cod;
	
	Livros(){		
	}//criando objeto
	
	Livros(String nome, String autor, String tema, int cod){
		this.nome = nome;
		this.autor = autor;
		this.genero = genero;
		this.cod = cod;
	}	
	
	void setCod(int cod) {
		this.cod = cod;
	}
	
	static int getCod() {
		return cod;
	}

	void setNome(String nome) {
		this.nome = nome;
	}
	
	static String getNome() {
		return nome;
	}
	
	void setAutor(String autor) {
		this.autor = autor;
	}
	
	static String getAutor() {
		return autor;
	}
	
	void setGenero(String genero) {
		this.genero = genero;
	}
	
	static String getGenero() {
		return genero;
	}	
	
	public String getLivros() { 
		
		return "Nome: "+this.nome+
				"\nAutor: "+ this.autor+
				"\nGenero: "+ this.genero ;
	}// metodo para retornar a lista de livros
	
	
	
}
